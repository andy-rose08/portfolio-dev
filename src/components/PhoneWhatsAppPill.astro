---
import Phone from '../components/icons/Phone.astro';
---

<a class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 md:px-4
text-xs lg:text-base bg-white/5 hover:scale-110 hover:bg-white/10 transition" {...Astro.props}
target="_blank"
rel="noopener noreferrer"
@click={toggleContactOptions}>
  <Phone class="size-4 md:size-6"/>
  <div id="contactOptions" :visible={contactOptions}>
    <a href="tel:+50688130229">Call</a>
    <a href="https://api.whatsapp.com/send?phone=+50688130229">Send WhatsApp Message</a>
  </div>
</a>

<script>
  let contactOptions = false;

  function toggleContactOptions() {
    contactOptions = !contactOptions;
  }
</script>

<style>
  [visible="false"] {
    display: none;
  }
</style>
